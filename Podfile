  pod 'Lightbox'
  pod 'Stripe'
  pod 'SwiftSpinner'
  
  # Pods for Nightline

  target 'NightlineTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'NightlineUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
